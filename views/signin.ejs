<%- layout('layouts/main.ejs') %>
<div class="row mt-4">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header bg-primary">
                <h2 class="text-light">Signin</h2>
            </div>
            <div class="card-body">
                <form action="/signin" method="POST">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Insert Email" class="form-control" >
                    </div>
                    <div class="form-group mt-2">
                        <input type="password" name="password" placeholder="Insert Password" class="form-control" >
                    </div>
                    <button type="submit" class="btn btn-dark w-75 mt-3">Signin</button>
                </form>
            </div>
        </div>
    </div>
</div>